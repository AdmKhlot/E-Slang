<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.willi.e_slang.AddWord">

    <EditText
        android:id="@+id/shortDef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Short Def"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/wordName"
        android:layout_marginLeft="-6dp"
        app:layout_constraintLeft_toLeftOf="@+id/wordName" />

    <EditText
        android:id="@+id/wordName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Word_Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:text="Add Word"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Word"
        android:onClick="applyText"
        android:layout_marginTop="225dp"
        app:layout_constraintTop_toBottomOf="@+id/shortDef"
        android:layout_marginLeft="133dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="33dp"
        android:onClick="back"
        android:text="Back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
